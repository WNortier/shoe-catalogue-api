<div class="row header center">
    <div class="col-3" class="#" id="#">
        <h1>Shoe Catalogue</h1>
    </div>
    <div class="col-4" class="#" id="#">
    </div>
    <div class="col-4" class="#" id="#">
    </div>
</div>
<!-- ▉▉▉▉▉▉ PURHCASE-SETTINGS ▉▉▉▉▉▉ -->
<div class="row">
    <div class="col-9">

        <div class="row">

            <div class="col-6 center purchaseSettings">
                {{#filteredShoes}}
                <form method="GET" action="/shoes/brand/{{brand}}">
                {{/filteredShoes}}
                    <div class="settingsSpacer"></div>
                    <div class="row">
                        <div class="center">
                            <div class="col-4 right">
                                <button type="submit" class="infoBtn">Info</button>
                                {{!-- <button type="submit" class="cartBtn">Cart</button> --}}
                            </div>
                            <div class="col-4"></div>
                            <div class="col-4"></div>

                        </div>
                    </div>
                    <div class="settingsSpacerSecond"></div>
                    <div class="purchaseDropdown">
                        <select name="brand" class="selectPurchaseBrand">
                            <option class="inner" value="">Select a brand</option>
                            <option class="inner" value="Zonverse">Zonverse</option>
                            <option class="inner" value="Yuma">Yuma</option>
                            <option class="inner" value="Kucci">Kucci</option>
                            <option class="inner" value="Jimmy Woo">Jimmy Woo</option>
                        </select>
                        <select name="color" class="selectPurchaseColor">
                            <option class="inner" value="">Select a color</option>
                            <option class="inner" value="black">Black</option>
                            <option class="inner" value="pink">Pink</option>
                            <option class="inner" value="red">Red</option>
                            <option class="inner" value="metallic">Metallic</option>
                        </select>
                        <select name="size" class="selectPurchaseSize">
                            <option class="inner" value="">Select a size</option>
                            <option class="inner" value="9">9</option>
                            <option class="inner" value="8">8</option>
                            <option class="inner" value="7">7</option>
                            <option class="inner" value="6">6</option>
                        </select>
                    </div>
                </form>
            </div>
            <!-- ▉▉▉▉▉▉ INFO/STATUS DASHBOARDS ▉▉▉▉▉▉ -->
            <div class="col-6 center" class="#" id="#">
                <div class="shoeData">
                    <h2>Stock Info</h2>
                    <div class="settingsSpacerSecond"></div>
                    <div class="row">
                        <div class="center infoTemplateInsertPoint infoDivs">
                            <!-- <div class="col-12 shoeDataInfo">Info displayed here</div> -->|
                            <table class="col-12 center stockListTemplateInsertPoint">
                                <tr>
                                    <th>Brand</th>
                                    <th>Color</th>
                                    <th>Size</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                </tr>
                                {{#each filteredShoes}}
                                <tr>
                                    <td>{{brand}}</td>
                                    <td>{{color}}</td>
                                    <td>{{size}}</td>
                                    <td>{{price}}</td>
                                    <td>{{quantity}}</td>
                                    <!-- <td><button onclick="editProduct({{id}})">Edit</button></td> -->
                                </tr>
                                {{/each}}
                            </table>
                        </div>
                    </div>
                </div>
                <div class="error">
                    <h2>Status</h2>
                    <!-- <div class="settingsSpacerSecond"></div> -->
                    <div class="row">
                        <div class="center">
                            <div class="col-12 shoeDataError">...</div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ▉▉▉▉▉▉ ADD-STOCK SETTINGS ▉▉▉▉▉▉ -->
        <div class="row">

            <div class="col-6 center addSettings" class="#" id="#">
                <form method="POST" action="/shoes">
                    <h2>Update Stock Settings</h2>
                    <div class="settingsSpacer addSpacerRemover"></div>
                    <div class="row">
                        <div class="center ">
                            <div class="col-4 right">

                                <button type="submit" class="addBtn">Update</button>
                            </div>
                            <div class="col-4"></div>
                            <div class="col-4"></div>
                        </div>
                    </div>

                    <div class="settingsSpacerSecond addSpacerRemover"></div>
                    <div class="addDropdown">
                        <select name="brand" class="selectAddBrand">
                            <option class="inner" value="">Select a brand</option>
                            <option class="inner" value="Zonverse">Zonverse</option>
                            <option class="inner" value="Yuma">Yuma</option>
                            <option class="inner" value="Kucci">Kucci</option>
                            <option class="inner" value="Jimmy Woo">Jimmy Woo</option>
                        </select>
                        <select name="color" class="selectAddColor">
                            <option class="inner" value="">Select a color</option>
                            <option class="inner" value="black">Black</option>
                            <option class="inner" value="pink">Pink</option>
                            <option class="inner" value="red">Red</option>
                            <option class="inner" value="metallic">Metallic</option>
                        </select>
                        <select name="size" class="selectAddSize">
                            <option class="inner" value="">Select a size</option>
                            <option class="inner" value="9">9</option>
                            <option class="inner" value="8">8</option>
                            <option class="inner" value="7">7</option>
                            <option class="inner" value="6">6</option>
                        </select>
                    </div>


                    <div class="settingsSpacerThird addSpacerRemover"></div>
                    <div class="row">
                        <div class="center">
                            <div class="col-10">

                                <input name="price" class="addPrice" placeholder="Enter price"
                                    oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                    type="number" maxlength="7" value="price">
                                <input name="quantity" class="addQuantity" placeholder="Enter quantity"
                                    oninput="javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
                                    type="number" maxlength="2" value="quantity">
                            </div>
                            <div class="col-2"></div>
                        </div>
                    </div>
                </form>
            </div>

            <div class="col-6 center button buttonZone">
                <button class="stockListBtn">Stock list</button>
            </div>
            <div class="scrollable stockListDiv center">
                <table class="col-12 center stockListTemplateInsertPoint">

                    <tr>
                        <th>Brand</th>
                        <th>Color</th>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Quantity</th>
                    </tr>
                    {{#each shoesEntry}}
                    <tr>
                        <td>{{brand}}</td>
                        <td>{{color}}</td>
                        <td>{{size}}</td>
                        <td>{{price}}</td>
                        <td>{{quantity}}</td>
                        <!-- <td><button onclick="editProduct({{id}})">Edit</button></td> -->
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
    <!-- ▉▉▉▉▉▉ CART SETTINGS ▉▉▉▉▉▉ -->
    <div class="col-12 center cart" class="#" id="#">
        <div class="row">
            <div class="col-12 center">
                <div class="col-12 center myHeader">
                    <h2>Shopping Basket</h2>
                </div>
            </div>
        </div>
        <!-- <div class="cartSpacer"></div> -->
        <div class="col-12 center ">
            <div class="row">
                <div class="col-12 center">
                    <table class="col-12 cartTemplateInsertPoint cartInfoTable cartStyling">
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>
<div class="row">
    <div class="center">
        <div class="col-9"></div>
        <div class="col-3 cartButtons">
            <button class="checkoutBtn">Checkout</button>
            <button class="cancelBtn">Cancel</button>
        </div>
    </div>
</div>